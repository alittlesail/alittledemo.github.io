
register namespace lua;

public struct fileattr
{
    string mode;        // 文件类型
    int size;           // 文件大小
}

public class lfs
{
    public static currentdir() : string {}
    public static chdir(string path) : bool {}
    public static attributes(string path) : fileattr {}
    public static dir(string path) : Functor<(string,string)>, string, string {}
    public static rmdir(string path) : bool {}
    public static mkdir(string path) : bool {}
}