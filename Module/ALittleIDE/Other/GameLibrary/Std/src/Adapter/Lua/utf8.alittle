
register namespace lua;

public class utf8
{
    // 计算utf8字符串的字的个数
    public static wordcount(string value) : int {}
    // 计算utf8字符串，在指定wordcount下的字节数，offset从0开始算
    public static bytecount(string value, int offset, int word_count) : int {}
    
    // ansi转utf8
    // utf8转ansi
    // 这个接口只有在windows平台才有效，其他平台返回原始内容
    // 因为其他平台默认基本都是utf8或者Unicode
    public static ansi2utf8(string c) : string {}
    public static utf82ansi(string c) : string {}
}