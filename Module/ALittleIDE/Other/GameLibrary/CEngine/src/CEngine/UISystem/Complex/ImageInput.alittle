    // 处理焦点事件
    protected fun HandleFocusIn(UIFocusInEvent event)
    {
        event.target = this;
        this.DispatchEvent(event);
        this.ShowDown();
    }
    
    protected fun HandleFocusOut(UIFocusOutEvent event)
    {
        event.target = this;
        this.DispatchEvent(event);
        this.ShowUp();
    }
    
